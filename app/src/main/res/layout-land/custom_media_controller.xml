<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lengthBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_toStartOf="@+id/total_playTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/current_playTime"
        android:layout_alignBottom="@+id/total_playTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/total_playTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/video_list"
        android:background="@mipmap/ic_styled_more"
        android:layout_below="@+id/lengthBar"
        android:layout_alignEnd="@+id/current_playTime" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_back"
        android:background="@mipmap/ic_styled_back"
        android:layout_marginEnd="64dp"
        android:layout_below="@+id/lengthBar"
        android:layout_toStartOf="@+id/play_pause" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_pause"
        android:background="@mipmap/ic_styled_play"
        android:layout_below="@+id/total_playTime"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_forward"
        android:background="@mipmap/ic_styled_forward"
        android:layout_marginStart="64dp"
        android:layout_below="@+id/lengthBar"
        android:layout_toEndOf="@+id/play_pause" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullscreen_button"
        android:background="@mipmap/ic_styled_inlarge"
        android:layout_below="@+id/lengthBar"
        android:layout_alignStart="@+id/total_playTime" />

</RelativeLayout>